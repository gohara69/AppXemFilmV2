<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodels.MovieDetail">

    <ImageView
        android:id="@+id/movie_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/san_dau_sinh_tu"/>

    <ImageView
        android:id="@+id/film_detail_imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="250dp"
        android:background="@color/design_default_color_surface"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
    </ImageView>

    <TextView android:id="@+id/text_view_ten_film"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/film_detail_imageView"
        app:layout_constraintLeft_toLeftOf="@id/film_detail_imageView"
        app:layout_constraintRight_toRightOf="@id/film_detail_imageView"
        android:text="One Piece - Đảo Hải Tặc"
        android:textSize="30dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_ten_khac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/film_detail_imageView"
        app:layout_constraintTop_toBottomOf="@id/text_view_ten_film"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#ccc"
            android:text="Tên khác: "/>
        <TextView
            android:id="@+id/ten_khac_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="Naruto: Sức Mạnh Vĩ Thú"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/film_detail_imageView"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_ten_khac"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#ccc"
            android:text="Thể loại: "/>
        <TextView
            android:id="@+id/text_view_the_loai"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#F56415"
            android:text="Phiêu lưu"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>